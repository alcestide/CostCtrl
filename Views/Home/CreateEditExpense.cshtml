@model CostCtrl.Models.Expense
@{
    ViewData["Title"] = "Create or Edit Entries";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">
                        @(Model?.Id == 0 ? "➕ Create New Entry" : "✏️ Edit Entry")
                    </h2>

                    <form asp-action="CreateEditExpenseForm" asp-controller="Home">
                        @* Hidden ID field *@
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Value" class="form-label">Amount ($)</label>
                            <input asp-for="Value" type="number" step="0.01" class="form-control" placeholder="0.00" />
                            <span asp-validation-for="Value" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <input asp-for="Description" type="text" class="form-control" placeholder="e.g., Groceries, Rent..." />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                ✅ Save Entry
                            </button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <a asp-action="Expenses" class="btn btn-link text-muted">← Back to Spendings</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
